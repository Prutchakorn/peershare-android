    <style name="TransactionBillNameStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/transactionBillNameColor</item>
    </style>

    <style name="TransactionStatusStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/transactionStatusColor</item>
    </style>

    <style name="TransactionPriceStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/transactionStatusColor</item>
    </style>
